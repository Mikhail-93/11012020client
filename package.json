{
  "name": "kopnik-client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "i18n:report": "vue-cli-service i18n:report --src './src/**/*.?(js|vue)' --locales './src/locales/**/*.json'",
    "test": "npm run test:system && npm run test:unit",
    "test:unit": "vue-cli-service test:unit --test-match '<rootDir>/tests/unit/**/*.spec.(js|jsx|ts|tsx)'",
    "test:unit:watch": "vue-cli-service test:unit --test-match '<rootDir>/tests/unit/**/*.spec.(js|jsx|ts|tsx)' --watchAll",
    "test:system": "jest --test-match '<rootDir>/tests/system/**/*.spec.(js|jsx|ts|tsx)'",
    "test:system:watch": "jest --test-match '<rootDir>/tests/system/**/*.spec.(js|jsx|ts|tsx)' --watchAll",
    "port": "sudo iptables -t nat -I OUTPUT -p tcp -d 127.0.0.1 --dport 80 -j REDIRECT --to-ports 8080"
  },
  "dependencies": {
    "async-lock": "^1.2.2",
    "axios": "^0.19.0",
    "bottlejs": "^1.7.2",
    "core-js": "^3.6.1",
    "fetch-intercept": "^2.3.1",
    "json-form-data": "^1.6.0",
    "json5": "^2.1.1",
    "keypather": "^3.1.0",
    "leaflet": "^1.6.0",
    "leaflet-geosearch": "^2.7.0",
    "lodash": "^4.17.15",
    "loglevel": "^1.6.6",
    "loglevel-plugin-prefix": "^0.8.4",
    "npm-check-updates": "^4.0.1",
    "vee-validate": "^3.2.1",
    "vue": "^2.6.11",
    "vue-i18n": "^8.15.3",
    "vue-router": "^3.1.3",
    "vue2-leaflet": "^2.4.2",
    "vue2-leaflet-geosearch": "^1.0.6",
    "vue2-leaflet-locatecontrol": "^1.0.1",
    "vue2-leaflet-polylinedecorator": "^2.0.1",
    "vuetify": "^2.2.0"
  },
  "devDependencies": {
    "@kazupon/vue-i18n-loader": "^0.3.0",
    "@vue/cli-plugin-babel": "^4.1.2",
    "@vue/cli-plugin-eslint": "^4.1.2",
    "@vue/cli-plugin-router": "^4.1.2",
    "@vue/cli-plugin-unit-jest": "^4.1.2",
    "@vue/cli-service": "^4.1.2",
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel-eslint": "^10.0.3",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "flush-promises": "^1.0.2",
    "husky": "^4.0.3",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-snapshot": "^24.9.0",
    "sass": "^1.24.0",
    "sass-loader": "^8.0.0",
    "vue-cli-plugin-i18n": "^0.6.0",
    "vue-cli-plugin-vuetify": "^2.0.3",
    "vue-template-compiler": "^2.6.11",
    "vuetify-loader": "^1.4.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential"
    ],
    "rules": {
      "no-console": "off"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "eslintIgnore": [
    "doc/view"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "transformIgnorePatterns": [
      "/node_modules/(?!vee-validate/dist/rules|vue2-leaflet-locatecontrol/Vue2LeafletLocatecontrol|vue2-leaflet-geosearch)"
    ],
    "testMatch": [
      "<rootDir>/(tests/**/*.spec.(js|jsx|ts|tsx))"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/jest-serializer-vue",
      "<rootDir>/tests/jest-serializer-error"
    ],
    "setupFiles": [
      "<rootDir>/tests/test-setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test",
      "...": "..."
    }
  }
}
